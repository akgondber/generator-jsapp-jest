{
  "name": "generator-jsapp-jest",
  "version": "1.0.0",
  "description": "Js app generator (almost clean + jest devDependency)",
  "homepage": "https://github.com/akgondber/generator-jsapp-jest",
  "author": {
    "name": "Rushan Alyautdinov",
    "email": "akgondber@gmail.com",
    "url": "https://github.com/akgondber"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "yeoman-generator",
    "jsapp",
    "scaffold",
    "cli",
    "node_module",
    "jest",
    "productivity",
    "template",
    "workflow"
  ],
  "devDependencies": {
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-xo": "^0.39.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.0",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^6.2.0"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "slugify": "^1.6.3",
    "yeoman-generator": "^5.4.2",
    "yosay": "^2.0.2"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "pretest": "eslint .",
    "lint": "eslint --fix .",
    "test": "jest"
  },
  "repository": "akgondber/generator-jsapp-jest",
  "license": "MIT"
}
